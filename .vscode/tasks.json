    "version": "2.0.0",
    "tasks": [
        {
            "label": "rebuild",
            "type": "shell",
            "command": [
                "rm -r ./build;",
                "mkdir build;",
                "cd build;",
                "cmake ..;",
                "make;"
            ],
            "group": {
                "kind": "build",
                "isDefault": true,
            },
            "problemMatcher": []
        }
    ]
}